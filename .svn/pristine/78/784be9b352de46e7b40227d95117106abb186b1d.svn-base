using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using NHibernate.Mapping.ByCode.Conformist;
using NHibernate.Mapping.ByCode;

namespace Olfrad.EscuelaSimple.Modelo
{
    class Inasistencia
    {
        public uint IdInasistencia { get; set; }
        public string Motivo { get; set; }
        public DateTime Desde { get; set; }
        public DateTime Hasta { get; set; }
    }

    class InasistenciaMap : ClassMapping<Inasistencia>
    {
        public InasistenciaMap()
        {
            Id(x => x.IdInasistencia, m => m.Generator(Generators.Identity));
            Property(x => x.Motivo);
            Property(x => x.Desde);
            Property(x => x.Hasta);
        }
    }
}
